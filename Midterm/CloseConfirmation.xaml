<Window x:Class="Midterm.CloseConfirmation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Midterm"
        mc:Ignorable="d"
        Title="CloseConfirmation" Height="200" Width="300">
    <Grid>
        <Label x:Name="lbl_confirmation" Content="Save to database before closing?" HorizontalAlignment="Left" Margin="50,40,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btn_yes" Content="Yes" HorizontalAlignment="Left" Margin="50,100,0,0" VerticalAlignment="Top" Height="23" Width="75" Click="Btn_yes_Click"/>
        <Button x:Name="btn_no" Content="No" HorizontalAlignment="Left" Margin="150,100,0,0" VerticalAlignment="Top" Height="23" Width="75" Click="Btn_no_Click"/>

    </Grid>
</Window>
